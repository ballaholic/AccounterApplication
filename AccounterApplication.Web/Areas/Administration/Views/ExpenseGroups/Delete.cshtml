@using AccounterApplication.Data.Models
@using Resources = AccounterApplication.Common.LocalizationResources.Areas.Administration.Views.Nomenclatures.NomenclatureViewResources

@model ExpenseGroup

@{
    ViewData["Title"] = Resources.Delete;
}

<div class="row mb-5">
    <div class="col">
        <h1 class="text-gray-800">@ViewData["Title"]</h1>
        <h3 class="text-gray-800">@MessagesResources.Confirmation</h3>
    </div>
</div>
<div class="row mb-5">
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.NameEN)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.NameEN)
    </div>
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.NameBG)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.NameBG)
    </div>
    <div class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsMain)
    </div>
    <div class="col-sm-10">
        @Html.DisplayFor(model => model.IsMain)
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="@ButtonsResources.Delete" class="btn btn-danger" /> |
    <a asp-action="Index">@ButtonsResources.Back</a>
</form>