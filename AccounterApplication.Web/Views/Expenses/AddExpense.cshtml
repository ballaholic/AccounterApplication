@using AccounterApplication.Web.Controllers
@using AccounterApplication.Web.ViewModels.Expenses
@using Resources = AccounterApplication.Common.LocalizationResources.Views.Expenses.ExpensesViewsResources;

@model ExpenseInputModel
@{
    ViewData["Title"] = Resources.AddExpense;
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-6">
    <form asp-controller="@nameof(ExpensesController).Replace(nameof(Controller), string.Empty)" asp-action="@nameof(ExpensesController.AddExpense)" class="form" method="post">
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpenseAmount"></label>
            <input asp-for="ExpenseAmount" class="form-control" data-val="false" />
            <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfExpense"></label>
            <input asp-for="DateOfExpense" class="form-control" />
            <span asp-validation-for="DateOfExpense" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpenseGroupId"></label>
            <select asp-for="ExpenseGroupId" class="form-control" asp-items="Model.ExpenseGroupListItems"></select>
            <span asp-validation-for="ExpenseGroupId" class="text-danger"></span>
        </div>

        <hr />
        <input type="submit" value=@ButtonsResources.Add class="btn btn-primary" />
    </form>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}