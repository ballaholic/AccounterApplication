@using AccounterApplication.Web.Controllers
@using AccounterApplication.Common.GlobalConstants
@using AccounterApplication.Web.ViewModels.Expenses
@using Resources = AccounterApplication.Common.LocalizationResources.Views.Expenses.ExpensesViewsResources;

@model ExpenseEditInputModel
@{
    ViewData["Title"] = Resources.EditExpense;
}

<div class="row mb-5">
    <div class="col">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="col-md-6">
    <form asp-controller="@nameof(ExpensesController).Replace(nameof(Controller), string.Empty)" asp-action="@nameof(ExpensesController.AddExpense)" class="form" method="post">
        <div class="form-group">
            <input asp-for="Id" hidden />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ExpenseAmount" class="form-control" data-val="false" hidden />
        </div>
        <div class="form-group">
            <label asp-for="ExpenseDate"></label>
            <input asp-for="ExpenseDate" class="form-control" />
            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpenseGroupId"></label>
            <select asp-for="ExpenseGroupId" class="form-control" asp-items="Model.ExpenseGroupListItems"></select>
            <span asp-validation-for="ExpenseGroupId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ComponentName"></label>
            <input asp-for="ComponentName" class="form-control" disabled />
            <span asp-validation-for="ComponentName" class="text-danger"></span>
        </div>
        <hr class="my-4" />
        <input type="submit" asp-route-submitType="@ButtonValueConstants.ButtonSubmit" value=@ButtonsResources.Update class="btn btn-primary btn-outline-dark" />
        <input type="submit" asp-route-submitType="@ButtonValueConstants.ButtonCancel" value=@ButtonsResources.Cancel class="btn btn-light btn-outline-dark" />
    </form>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}