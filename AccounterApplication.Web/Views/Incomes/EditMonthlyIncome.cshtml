@using AccounterApplication.Web.Controllers
@using AccounterApplication.Common.GlobalConstants
@using AccounterApplication.Web.ViewModels.MonthlyIncomes

@using Resources = AccounterApplication.Common.LocalizationResources.Views.MonthlyIncomes.IncomesViewsResources

@model MonthlyIncomeInputModel

@{
    ViewData["Title"] = Resources.EditMonthlyIncome;
}

<div class="row mb-5">
    <div class="col">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="col-md-6">
    <form asp-controller="@nameof(IncomesController).Replace(nameof(Controller), string.Empty)" asp-action="@(nameof(IncomesController.EditMonthlyIncome))" class="form" method="post">
        <div class="form-group">
            <input asp-for="Id" type="hidden" />
        </div>
        <div class="form-group">
            <input asp-for="ComponentId" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" data-val="false" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IncomePeriod"></label>
            <input asp-for="IncomePeriod" class="form-control" />
            <span asp-validation-for="IncomePeriod" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ComponentName"></label>
            <input asp-for="ComponentName" class="form-control" disabled />
            <span asp-validation-for="ComponentName" class="text-danger"></span>
        </div>
        <hr />
        <input type="submit" asp-route-submitType="@ButtonValueConstants.ButtonSubmit" value="@ButtonsResources.Update" class="btn btn-primary btn-outline-dark" />
        <input type="submit" asp-route-submitType="@ButtonValueConstants.ButtonCancel" value=@ButtonsResources.Cancel class="btn btn-light btn-outline-dark" />
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}